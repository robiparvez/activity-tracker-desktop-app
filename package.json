{
    "name": "activity-tracker-desktop",
    "version": "1.0.0",
    "description": "Desktop application for analyzing ActivityTracker work hours and productivity metrics",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:installer": "tsc && vite build && electron-builder --win nsis",
        "build:all": "tsc && vite build && electron-builder --win",
        "preview": "vite preview",
        "electron:dev": "node --max-old-space-size=4096 node_modules/vite/bin/vite.js",
        "electron:build": "tsc && vite build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "keywords": [
        "activity-tracker",
        "productivity",
        "electron",
        "react"
    ],
    "author": "M. D. Robiuzzaman Parvez",
    "license": "MIT",
    "dependencies": {
        "better-sqlite3": "^12.4.1",
        "date-fns": "^4.1.0",
        "fernet": "^0.3.1",
        "lucide-react": "^0.460.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "recharts": "^2.15.0"
    },
    "devDependencies": {
        "@radix-ui/react-alert-dialog": "^1.1.4",
        "@radix-ui/react-dialog": "^1.1.4",
        "@radix-ui/react-label": "^2.1.1",
        "@radix-ui/react-progress": "^1.1.1",
        "@radix-ui/react-select": "^2.1.4",
        "@radix-ui/react-slot": "^1.1.1",
        "@radix-ui/react-tabs": "^1.1.1",
        "@radix-ui/react-toast": "^1.2.4",
        "@types/better-sqlite3": "^7.6.12",
        "@types/node": "^22.10.2",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^8.2.2",
        "electron": "^32.2.6",
        "electron-builder": "^25.1.8",
        "framer-motion": "^11.15.0",
        "postcss": "^8.4.49",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^3.4.17",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.7.2",
        "vite": "^5.4.11",
        "vite-plugin-electron": "^0.28.7",
        "vite-plugin-electron-renderer": "^0.14.6",
        "wait-on": "^8.0.1"
    },
    "build": {
        "appId": "com.activitytracker.desktop",
        "productName": "Activity Tracker Analysis",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "sign": null
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Activity Tracker Analysis",
            "displayLanguageSelector": false,
            "installerLanguages": [
                "en_US"
            ],
            "license": "LICENSE",
            "warningsAsErrors": false
        }
    }
}
